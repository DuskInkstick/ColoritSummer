<Window x:Class="ColoritSummer.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColoritSummer.WPF"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800"  FontFamily="Comic Sans MS"
        DataContext="{Binding MainWindowViewModel, Source={StaticResource ResourceKey=VmLocator}}">
    <Grid>
        <StackPanel>
            <Button Content="Aвторизация" Command="{Binding OpenLoginCommand}"/>
            <Button Content="Регистрация" Command="{Binding OpenRegistrationCommand}"/>
        </StackPanel>
    </Grid>
</Window>
